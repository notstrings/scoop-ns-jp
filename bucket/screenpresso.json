{
    "version": "2.1.38",
    "description": "Image and Video screen capture",
    "homepage": "https://www.screenpresso.com/",
    "license": "Freeware",
    "url": "https://www.screenpresso.com/binaries/releases/stable/dotnet47/Screenpresso.exe",
    "hash": "5e3a7a58a93fc0fbe18b2c9ba20f282bd0c4adb4ca08f95c690673daa0c3ba43",
    "bin": "Screenpresso.exe",
    "shortcuts": [
        [
            "Screenpresso.lnk",
            "Screenpresso"
        ]
    ],
    "persist": [],
    "checkver": {
        "url": "https://www.screenpresso.com/download/",
        "regex": "Latest version .([\\d.]+)"
    },
    "autoupdate": {
        "url": "https://www.screenpresso.com/binaries/releases/stable/dotnet47/Screenpresso.exe"
    },
    "pre_install": [
        " $WshShell = New-Object -ComObject WScript.Shell",
        " $shortcutPath = \"$dir\\Screenpresso.lnk\"",
        " $shortcut = $WshShell.CreateShortcut($shortcutPath)",
        " $shortcut.TargetPath = \"$dir\\Screenpresso.exe\"",
        " $shortcut.WorkingDirectory = \"$dir\"",
        " $shortcut.Arguments = \"--portablemode\"",
        " $shortcut.IconLocation = \"$dir\\Screenpresso.exe\"",
        " $shortcut.Save()"
    ]
}